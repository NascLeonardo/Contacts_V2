@model Contacts_V2.Models.User

@{
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="row d-flex h-100 justify-content-center align-content-center">

    <form action="Register" method="post" class=" row col-12 col-md-8 mx-md-0 ">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <h3 class="text-start">Registration</h3>
        <div class="form-group form-group input-group-sm col-12 ">
            <input type="text" asp-for="Name" class="form-control border-1" aria-describedby="helpName"
                placeholder="Ex: Jon Doe" />
            <small id="helpName" class="form-text text-muted">Your name</small>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group form-group input-group-sm col-12 ">
            <input type="email" asp-for="Email" class="form-control border-1" aria-describedby="helpEmail"
                placeholder="Ex: email@email.com" />
            <small id="helpEmail" class="form-text text-muted">Your Email</small>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group form-group input-group-sm col-12 col-md-6">
            <input type="password" asp-for="Password" class="form-control border-1" aria-describedby="helpPassword"/>
            <small id="helpPassword" class="form-text text-muted">Your Password</small>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="form-group form-group input-group-sm col-12 col-md-6">
            <input type="password" asp-for="ConfirmationPassword" class="form-control border-1"
                aria-describedby="helpConfirmationPassword" />
            <small id="helpConfirmationPassword" class="form-text text-muted">Confirm your Password</small>
            <span asp-validation-for="ConfirmationPassword" class="text-danger"></span>
        </div>

        <div class="d-grid gap-2 col-12 mt-3">
            <button type="submit" class="btn btn-primary" type="button">Register</button>
        </div>
        <a href="/Auth/Login">Already have an account? Login now!</a>

    </form>


</div>