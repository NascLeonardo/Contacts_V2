@model Contacts_V2.Models.Contact
@{
    ViewData["Title"] = "Create";

}

<p>
    Create a new contact
</p>
<div>

    <div class="row">
        <form asp-action="Create" class="row col-12 col-md-6 mx-auto mx-md-0">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group form-group input-group-sm col-12 col-md-6">
                <label asp-for="Firstname" class="control-label"></label>
                <input asp-for="Firstname" class="form-control border-1" aria-describedby="helpFirstname"
                    placeholder="Ex: Jon" />
                <small id="helpFirstname" class="form-text text-muted">Contact's firstname</small>
                <span asp-validation-for="Firstname" class="text-danger"></span>
            </div>
            <div class="form-group form-group input-group-sm col-12 col-md-6">
                <label asp-for="Surname" class="control-label"></label>
                <input asp-for="Surname" class="form-control border-1" aria-describedby="helpSurname"
                    placeholder="Ex: Doe" />
                <small id="helpSurname" class="form-text text-muted">Contact's surname</small>
                <span asp-validation-for="Surname" class="text-danger"></span>

            </div>
            <div class="form-group input-group-sm col-12">
                <label asp-for="Nickname" class="control-label"></label>
                <input id="Nickname" asp-for="Nickname" class="form-control border-1" placeholder="Ex: JonD"
                    onkeyup="nospaces(this)" />
                <small id="helpNickname" class="form-text text-muted">Contact's nickname.</small>
                <span asp-validation-for="Nickname" class="text-danger"></span>
            </div>
            <div class="form-group input-group-sm col-12">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control border-1" aria-describedby="helpEmail"
                    placeholder="Ex: email@email.com" />
                <small id="helpEmail" class="form-text text-muted">Contact's email.</small>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group input-group-sm col-12">
                <label asp-for="Phone" class="control-label "></label>
                <input id="Phone" asp-for="Phone" class="form-control border-1" aria-describedby="helpPhone"
                    placeholder="Ex: (00) 01234-5678" />
                <small id="helpPhone" class="form-text text-muted">Contact's phone</small>
                <span asp-validation-for="Phone" class="text-danger"></span>

            </div>
            <div class="form-group input-group-sm col-12">
                <label asp-for="Birthday" class="control-label"></label>
                <input type="date" asp-for="Birthday" class="form-control border-1" aria-describedby="helpBirthday" />
                <small id="helpBirthday" class="form-text text-muted">Contact's birthday</small>
                <span asp-validation-for="Phone" class="text-danger"></span>

            </div>
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <select asp-for="Type" class="form-control border-1">
                    <option value="">-- Select the contact type --</option>
                    <option value="Personal">Personal</option>
                    <option value="Professional">Professional</option>
                </select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="d-grid gap-2 col-12 mt-3">
                <button type="submit" class="btn btn-primary" type="button">Save</button>
            </div>
        </form>
    </div>
    <script>
        $(document).ready(function () {
            $('#Phone').inputmask('(99) 99999-9999');
        });
        $('#Nickname').keyup(function () {
            this.value = this.value.replace(/\s/g, '');
        });
    </script>

</div>